{
  "$schema": "http://json.schemastore.org/template",
  "author": "LethalAPI Modding Community",
  "groupIdentity": "LethalAPI.Templates.Project",
  "identity": "LethalAPI.Templates.Project",
  "name": "LethalAPI Project Template",
  "shortName": "LethalAPIProjectTemplate",
