      "isRequired": false,
      "description": "Sets the description of the plugin",
      "defaultValue": "PROJECT-DESCRIPTION",
      "replaces": "PROJECT-DESCRIPTION"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [ 
            ".git/**",
            ".idea/**",
            ".vs/**",
            "bin/**",
            "obj/**",
            "../.idea/**",
            "../.git/**",
            "../.vs/**",
            "../bin/**",
            "../obj/**",
            "*/.git/**",
            "*/.idea/**",
            "*/.vs/**",
            "*/bin/**",
            "*/obj/**"
          ]
        }
      ]
    }
  ]
